<!DOCTYPE html>
<html>
    <%- include("partials/head.ejs", {title: 'Budget - Index Page'}) %> 
    <%- include("./partials/header.ejs") %>
    <body>

        <!-- Primary Page Layout
        –––––––––––––––––––––––––––––––––––––––––––––––––– -->
        <div class="container">
            <table class="u-full-width">
                <h4>Budgtr</h4>
                <nav>
                    <a href="/budgets/new">Create New Item</a>
                </nav>
                <thead>
                    <tr>
                      <th>Date</th>
                      <th>Name</th>
                      <th>From</th>
                      <th>Amount</th>
                      <th>Tags</th>
                      <th>edit</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(let i = 0; i < allBudgets.length; i++){ %>
                        
                        <tr>
                            <td><%= allBudgets[i].date %></td>
                            <td>
                                <a href="/budgets/<%= i %>">
                                    <%= allBudgets[i].name %>
                                </a>
                            </td>
                            <td><%= allBudgets[i].from %></td>
                            <td><%= allBudgets[i].amount %></td>
                            <!-- <form action="/budgets/<%= i %>?_method=DELETE" method="POST">
                                <input type="submit" value="DELETE">
                            </form> -->
                            <td><%= allBudgets[i].tags.join(", ") %></td>
                            <td>
                                <a href="/budgets/<%= i %>/edit">EDIT</a>
                            </td>
                        </tr>
                        
                        <% } %>
                    </tbody>
                </table>
            </div>
            <%- include("./partials/footer.ejs") %>
          </div>
        </div>
      
      <!-- End Document
        –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    </body>
</html>